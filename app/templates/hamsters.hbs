<main class="ui container">
  <h1>My hamsters</h1>
  <div class="ui grid">
    <div class="ten wide column">
      <table class="ui celled striped table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Weight</th>
            <th>Avatar</th>
            <th>State</th>
            <th>Fluffiness</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |hamster|}}
            {{hamster-row hamster=hamster data-test-hamster=true}}
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="six wide column">
      {{outlet}}
    </div>
  </div>
</main>
