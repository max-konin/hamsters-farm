<h2>{{model.name}}</h2>
<div class="ui segment">
  <div>
    <img src={{model.avatarUrl}} data-test-avatar/>
  </div>

  <div data-test-switch-state>
    {{hamster-state-switcher currentState=model.state onChange=(action "changeState")}}
  </div>
</div>

<div class="ui segment">
  <h3>Slaves</h3>
  <ul>
    {{#each model.slaves as |slave|}}
      <li data-test-slave>{{slave.name}}</li>
    {{/each}}
  </ul>
</div>